<h1>Tweets#edit</h1>
<%= form_for(@tweet) do |f| %>
    <% if @tweet.errors.any? %>
        <div id="error_explanation">
            <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
            <ul>
                <% @tweet.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit "投稿" %>
    <%= link_to "戻る", tweets_path %>
<% end %>
